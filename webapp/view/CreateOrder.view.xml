<mvc:View
    controllerName="be.edu.ap.sales.zsd040salesapp.controller.CreateOrder"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">


    <semantic:SemanticPage
        id="CreateOrderView"
        busy="{CreateOrderView>/busy}"
        busyIndicatorDelay="{CreateOrderView>/delay}"
        showFooter="true">
        <semantic:titleHeading>
            <Title id="_IDGenTitle1"
                text="Create Sales Order"
                level="H2" />
        </semantic:titleHeading>
        <semantic:headerContent>
            <ObjectNumber id="_IDGenObjectNumber1" />
        </semantic:headerContent>

        <semantic:content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <f:SimpleForm id="SimpleFormDisplay354"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Creatation form"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <core:Title text="Create sales order" />

                        <Label text="Custumer reference" />
                        <Input id="Cust_ref" value="" required="true" />

                        <!-- <Label text="Custumer reference" required="true"/>
                        <Select
                        id="Cust_ref_select" required="true" >
                            <core:ListItem
                        key="cust_ref1" text="refference1"  />
                        </Select> -->

                        <Label text="Sold-To-Party" required="true" />
                        <Select id="STP" forceSelection="true" items="{ path: '/ZSD_040_SOLD_TO_PARTIES'}">
                            <core:Item key="{Sold_to}" text="{Sold_to}" />
                        </Select>
                        <Label text="Required delivery date" required="true" />
                        <DatePicker id="RDD" valueFormat="yyyyMMdd" value="" required="true" />

                    </f:content>
                </f:SimpleForm>
            </VBox>
        </semantic:content>
        <!-- Semantic Footer Buttons -->
        <semantic:positiveAction>
            <semantic:PositiveAction id="_IDGenPositiveAction1" text="Create Sales Order"
                press="addSalesOrder" />
        </semantic:positiveAction>

        <!--Semantic ShareMenu Buttons-->
        <semantic:sendEmailAction>
            <semantic:SendEmailAction
                id="shareEmail"
                press=".onSendEmailPress" />
        </semantic:sendEmailAction>

        <semantic:closeAction>
            <semantic:CloseAction
                id="closeColumn"
                press=".onCloseCreateOrderPress" />
        </semantic:closeAction>

        <!-- Custom Footer Content-->

    </semantic:SemanticPage>
</mvc:View>