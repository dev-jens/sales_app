<mvc:View
    controllerName="be.edu.ap.sales.zsd040salesapp.controller.List"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{listView>/title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                id="list"
                width="auto"
                class="sapFDynamicPageAlignContent"
                items="{
                    path: '/ZSD_040_C_SALES_ITEMS',
                    sorter: {
                        path: 'Document_nr',
                        descending: false
                    },
                    groupHeaderFactory: '.createGroupHeader'
                }"
                busyIndicatorDelay="{listView>/delay}"
                noDataText="{listView>/noDataText}"
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelectionChange">

                <headerToolbar>
                    <OverflowToolbar>
                        <Input
                        id="input"
                        placeholder="Enter sold to"
                        showSuggestion="true"
                        liveChange=".onSearch"
                        submit=".onEnter"
                        tooltip="{i18n>listSearchTooltip}"
                        suggestionItemSelected=".onSearch"
                        suggestionItems="{/ZSD_040_SOLD_TO_PARTIES}">
                       
                        <suggestionItems>
                            <core:Item  text="{Sold_to}" />
                        </suggestionItems>
                        <layoutData>
                            <OverflowToolbarLayoutData
                                minWidth="150px"
                                maxWidth="240px"
                                shrinkable="true"
                                priority="NeverOverflow"/>
                        </layoutData>
                    </Input>
                    <Button 
                    text="Search"
                    press=".onSearch"/> 

                        <ToolbarSpacer/>
                        <Button id="_IDGenButton1" 
                        type="Accept"
                        text="Create Order"
                        press="onPressCreate"/> 

                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <StandardListItem type="Navigation" press=".onSelectionChange" title="{Mat_nr}" description="{Item_Description}" />
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>